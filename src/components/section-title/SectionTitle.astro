---
type Props = {
  title: string;
  id?: string;
};

const { title, id } = Astro.props;
---

<h2 class="section-title" id={id}>
  <slot />
  {title}
</h2>

<style>
  .section-title {
    font-size: clamp(2em, 6vw, 3em);
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }
</style>
