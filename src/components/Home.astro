---
import LinkeInIcon from "./icons/LinkedIn.astro";
import GitGubIcon from "./icons/GitHub.astro";

import EmailIcon from "./icons/Email.astro";
---

<section class="home wrapper">
	<h1 class="home__title">
		Hey, soy Joselu <span class="home__available">Full-Stack Developer</span>
	</h1>
	<h2 class="home__subtitle">
		Desarrollador web. Apasionado por las nuevas tecnologías. En búsqueda de una
		oportunidad para crecer y aprender en este fascinante mundo del desarrollo.
	</h2>

	<ul class="home__socials">
		<li class="home__social">
			<LinkeInIcon class="home__icon" />
			<a
				href="https://www.linkedin.com/in/j0selu/"
				target="_blank"
				rel="noopener noreferrer">LinkedIn</a
			>
		</li>
		<li class="home__social">
			<GitGubIcon class="home__icon" />
			<a
				href="https://github.com/JoseIu"
				target="_blank"
				rel="noopener noreferrer">Github</a
			>
		</li>
		<li class="home__social">
			<EmailIcon class="home__icon" />
			<a
				href="mailto:joseluissgz97@gmail.com"
				target="_blank"
				rel="noopener noreferrer">joseluissgz97@gmail.com</a
			>
		</li>
	</ul>
</section>

<style>
	.home {
		padding: 11em 1em 0 1em;
		margin-bottom: 7em;
	}
	.home__title {
		margin-bottom: 1em;
		font-size: clamp(1.5rem, 3.5vw, 2rem);
		font-weight: 700;

		display: flex;
		flex-direction: column;
		gap: 0.5em;
	}
	@media screen and (min-width: 400px) {
		.home__title {
			flex-direction: row;
			align-items: center;
		}
	}
	.home__available {
		max-width: 10rem;
		padding: 0.2em 1em;
		font-size: clamp(0.75rem, 1.5vw, 0.75rem);
		text-align: center;
		border-radius: 0.5em;

		background-color: rgba(12, 128, 56, 0.685);
	}
	.home__subtitle {
		max-width: 700px;

		font-size: clamp(1rem, 3vw, 1.6rem);

		margin-bottom: 1.5em;
		line-height: 2.1rem;
	}
	.home__socials {
		display: flex;

		flex-wrap: wrap;
		gap: 2em;
	}
	.home__social {
		font-size: 1rem;
		padding: 0.5em 1em;
		border-radius: 2em;
		outline: 1px solid #ffffff1a;
		color: #ffffff80;
		background-color: #ffffff0d;

		display: flex;
		align-items: center;
		column-gap: 0.3em;
		transition: all 0.2s ease;
	}
	.home__icon {
		width: 1.2em;
	}
	.home__social:hover {
		background-color: #ffffff1a;
		transform: scale(1.1);
	}
</style>
