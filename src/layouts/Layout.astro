---
import { ClientRouter } from 'astro:transitions';

import Header from '@components/header/Header.astro';
import 'cal-sans';
import '../styles/reset.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Joselu Front-end Developer - React - Next.js - Astro" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Joselu Frontend Developer" />
    <meta
      property="og:description"
      content="Mira mi portafolio y mis proyectos hechos con React, Next.js y Astro."
    />
    <meta property="og:url" content="https://joselu-portfolio.vercel.app/" />
    <link rel="canonical" href="https://joselu-portfolio.vercel.app/" />

    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  .wrapper {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  .smoke {
    color: rgba(var(--color-text-muted), 1);
  }

  .section-icon {
    width: 1em;
    color: rgba(var(--color), 1);
  }

  .building {
    color: rgb(var(--color), 1);
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 600;
  }
</style>
